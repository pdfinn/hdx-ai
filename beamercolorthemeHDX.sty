% beamercolorthemeHDX.sty
% Color theme for Happy Digital X (HDX) Beamer presentations
%
% Colors extracted from official HDX PowerPoint template

\mode<presentation>

% Define HDX brand colors
\definecolor{hdxpurple}{HTML}{611675}      % Primary purple
\definecolor{hdxbg}{HTML}{F0EDEC}          % Background beige/cream
\definecolor{hdxgold}{HTML}{D4A843}        % Gold accent (HAPPY DIGITAL)
\definecolor{hdxcyan}{HTML}{4AB9D4}        % Cyan accent (X in logo)
\definecolor{hdxdarktext}{HTML}{000000}    % Black text
\definecolor{hdxwhite}{HTML}{FFFFFF}       % White

% Set beamer colors
\setbeamercolor{normal text}{fg=hdxdarktext, bg=hdxbg}
\setbeamercolor{alerted text}{fg=hdxpurple}
\setbeamercolor{example text}{fg=hdxpurple}

% Structure colors
\setbeamercolor{structure}{fg=hdxpurple}
\setbeamercolor{palette primary}{fg=hdxwhite, bg=hdxpurple}
\setbeamercolor{palette secondary}{fg=hdxpurple, bg=hdxbg}
\setbeamercolor{palette tertiary}{fg=hdxwhite, bg=hdxpurple}
\setbeamercolor{palette quaternary}{fg=hdxdarktext, bg=hdxbg}

% Title page
\setbeamercolor{title}{fg=hdxpurple}
\setbeamercolor{subtitle}{fg=hdxdarktext}
\setbeamercolor{author}{fg=hdxdarktext}
\setbeamercolor{institute}{fg=hdxdarktext}
\setbeamercolor{date}{fg=hdxdarktext}

% Frame title
\setbeamercolor{frametitle}{fg=hdxdarktext, bg=}
\setbeamercolor{framesubtitle}{fg=hdxpurple}

% Blocks
\setbeamercolor{block title}{fg=hdxwhite, bg=hdxpurple}
\setbeamercolor{block body}{fg=hdxdarktext, bg=hdxbg}
\setbeamercolor{block title alerted}{fg=hdxwhite, bg=hdxpurple}
\setbeamercolor{block body alerted}{fg=hdxdarktext, bg=hdxbg}
\setbeamercolor{block title example}{fg=hdxwhite, bg=hdxpurple}
\setbeamercolor{block body example}{fg=hdxdarktext, bg=hdxbg}

% Items
\setbeamercolor{item}{fg=hdxpurple}
\setbeamercolor{subitem}{fg=hdxpurple}
\setbeamercolor{subsubitem}{fg=hdxpurple}
\setbeamercolor{item projected}{fg=hdxwhite, bg=hdxpurple}

% Table of contents
\setbeamercolor{section in toc}{fg=hdxpurple}
\setbeamercolor{subsection in toc}{fg=hdxdarktext}
\setbeamercolor{section number projected}{fg=hdxwhite, bg=hdxpurple}

% Navigation
\setbeamercolor{section in head/foot}{fg=hdxwhite, bg=hdxpurple}
\setbeamercolor{subsection in head/foot}{fg=hdxpurple, bg=hdxbg}

% Separator line
\setbeamercolor{separator line}{bg=hdxpurple}

% Footer
\setbeamercolor{footline}{fg=hdxpurple, bg=}

% Caption
\setbeamercolor{caption}{fg=hdxdarktext}
\setbeamercolor{caption name}{fg=hdxpurple}

\mode<all>
